<p style="color: green"><%= notice %></p>

<p id="notice"><%= notice %></p>
<main role="main">
  <section class="jumbotron text-center">
    <div class="container">
      <h1>Lokals</h1>
    </div>
  </section>

  <%= link_to 'Sort by cena', lokals_path({ key: 'sort' }) %>
  <%= link_to 'Not Sort by cena', lokals_path %>
  <% @lokals.each do |lokal| %>
    <div class="album py-2 bg-light">
      <div class="container">
        <div class="col-md-5">
          <div class="card mb-2 box-shadow">
            <table>
              <thead>
              <tr>
                <th>Ulica</th>
                <th>Cena z≈Ç</th>
                <th colspan="6"></th>
              </tr>
              </thead>
              <tbody>
              <tr>
                <td><%= lokal.ulica %></td>
                <td><%= lokal.cena %></td>
                <td>
                  <div class="btn  btn-outline-info">
                    <%= link_to 'Show', lokal %> |
                    <%= link_to "Book lokal", book_lokal_url(lokal), method: :put%>
                  </div>
                </td>
              </tr>
              </tbody>
            </table>
            <% if current_user.admin? %>
              <div class="btn  btn-outline-info">
                <div>
                  <%= link_to "Edit this lokal", edit_lokal_path(lokal) %>
                  <%= button_to "Destroy this lokal", lokal, method: :delete %>
                </div>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
    </div>
  <% end %>
  <% if current_user.admin? %>
    <div class="btn  btn-outline-info">
      <%= link_to 'New Lokal', new_lokal_path %>
    </div>
  <% end %>
</main>


